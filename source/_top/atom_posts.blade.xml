@php echo '<?xml version="1.0" encoding="utf-8"?>\n'; @endphp
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ $page->site_title }}</title>
  <subtitle>The blog of an elliptical human</subtitle>
  <link href="{{ $page->getUrl() }}" rel="self"/>
  <link href="{{ $page->baseUrl }}"/>
  <updated>{{ date('c', $posts->max('date')) }}</updated>
  <id>{{ $page->baseUrl }}</id>
  <author>
    <name>{{ $page->author }}</name>
  </author>
  @php $punctuation = ['.',',',':',';','!','?','—','–']; @endphp
  @foreach ($posts as $post)
  <entry>
    @if ($post->title)
    <title type="text">{{ $post->title }}</title>
    @else
      @php $words = explode(' ', (strip_tags($post->getContent())));
           $num_words = count($words);
           $max_words = 23;
      @endphp
      @foreach ($words as $word)
        @if ($loop->iteration == $max_words)
          @php $num_words = $max_words; @endphp
          @break
        @else
          @php $haspunct = false; @endphp
          @foreach ($punctuation as $punct)
            @php $pos = strrpos($word, $punct); @endphp
            @if ($pos)
              @php
                $num_words = $loop->parent->iteration;
                $words[$loop->parent->index] = str_split($word, $pos)[0];
                $haspunct = true;
              @endphp
              @break
            @endif
          @endforeach
          @if ($haspunct) @break @endif
        @endif
      @endforeach

      <title type="text">{{ implode(' ', array_slice($words, 0, $num_words)) }}</title>
    @endif
    <link href="{{ $post->getUrl() }}"/>
    <updated>{{ date('c', $post->date_revised || $post->date) }}</updated>
    <published>{{ date('c', $post->date)  }}</published>
    <id>{{ $post->getUrl() }}</id>
    @php $summary = $post->synopsis || $post->description; @endphp
    @if ($summary)
    <summary>{{ $summary }}</summary>
    @endif
    <content type="html">{{ $post->getContent() }}</content>
  </entry>
  @endforeach
</feed>
