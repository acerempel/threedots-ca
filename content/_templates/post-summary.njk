            {%- set post_class = "summary" if post.data.synopsis else "preview" -%}
            <article class="post {{ post_class }}">
              {% if post.data.title -%}
              <h3>{% link post %}</h3>
              {%- else %}
              <div class="date">{% date post.date %}</div>
              {%- endif %}
              {%- if post.data.synopsis %}
              <p class="synopsis">({{ post.data.synopsis | safe }})</p>
              {%- elseif post | has_excerpt %}
              {{ post | excerpt | safe }}
              <p class="read-more">
                <a href="{{ post.url }}">Continue reading â€¦</a>
              </p>
              {%- else %}
              {{ post.templateContent | safe }}
              {%- endif %}
            </article>
